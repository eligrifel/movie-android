<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            >




            <TextView
                android:text="insert movie"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/insert_movie_headline"
                android:textAlignment="center"
                android:gravity="center_horizontal|center"
                android:textSize="30sp"

                android:padding="8dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding_material">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/ET_movie_name"
                    android:layout_weight="0.75"
                    android:padding="8dp"
                    />

                <TextView
                    android:text="movie name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV_movie_name"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/ET_movie_year"
                    android:layout_weight="0.75"
                    android:padding="8dp"
                    />

                <TextView
                    android:text="year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV_year"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/ET_movie_info"
                    android:layout_weight="0.86"
                    android:singleLine="false"
                    android:selectAllOnFocus="false"
                    android:textAlignment="center"
                    android:padding="8dp"
                    />

                <TextView
                    android:text="info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/TV_info"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="264dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/ET_movie_url"
                    android:inputType="textUri"
                    android:padding="8dp"
                    />

                <TextView
                    android:text="img url"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:padding="8dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:layout_width="196dp"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="10"
                    android:id="@+id/ET_numberofmovies"
                    android:layout_weight="10.66"
                    android:padding="8dp"
                    />

                <TextView
                    android:text="number of movies"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:padding="8dp"
                    />

            </LinearLayout>

            <Spinner
                android:layout_width="249dp"
                android:layout_height="match_parent"
                android:id="@+id/Spinner_category"
                android:layout_margin="16dp"
                android:spinnerMode="dropdown"
                android:backgroundTint="@android:color/black"
                android:textColor="#000000"
                android:textAlignment="inherit"
                android:background="@color/switch_thumb_disabled_material_dark"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="8dp"
                />

            <Button
                android:text="update movie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/B_update_movie"
                android:layout_margin="16dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>