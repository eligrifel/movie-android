<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:id="@+id/layout_main_user_personal"
    >


    <LinearLayout
        android:id="@+id/layout_personal_page_info"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <TextView
                android:text="Hello:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="11dp"
                tools:layout_editor_absoluteX="0dp"
                android:padding="8dp"
                android:id="@+id/TVuser_page_hello"
                android:textAlignment="center"
                android:textSize="24sp" />

            <TextView
                android:padding="8dp"
                android:text="guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="14dp"
                tools:layout_editor_absoluteX="64dp"
                android:id="@+id/TVuser_name"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:text="current rented movies:"
                android:layout_width="wrap_content"
                android:layout_height="37dp"
                tools:layout_editor_absoluteY="11dp"
                tools:layout_editor_absoluteX="0dp"
                android:padding="8dp"
                android:id="@+id/TV_current_rented_movies"
                android:textAlignment="center"
                android:onClick="getCurrentRentedMovies" />

            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="14dp"
                tools:layout_editor_absoluteX="64dp"
                android:id="@+id/TV_number_rented_movies"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />


        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="credit remains:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="11dp"
                tools:layout_editor_absoluteX="0dp"
                android:padding="8dp"
                android:id="@+id/TV_credit_remain"
                android:textAlignment="center"
                android:textSize="18sp" />


            <TextView
                android:padding="8dp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="14dp"
                tools:layout_editor_absoluteX="64dp"
                android:id="@+id/TV_number_credit_remains"
                android:textColor="@android:color/black"
                android:textStyle="normal|bold" />

            <Button
                android:text="manage credits"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                tools:layout_editor_absoluteY="11dp"
                tools:layout_editor_absoluteX="0dp"
                android:padding="8dp"
                android:id="@+id/TV_get_credit"
                android:textAlignment="center"
                android:onClick="getCredit" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_personal_page_fragment_container"
        android:layout_weight="6"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">


    </LinearLayout>
</LinearLayout>